{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": [1, "single"],
        "semi": [2, "always"],
        // "space-in-brackets": [1, "never"],
        "no-use-before-define": "off",
        "keyword-spacing": [2, { "after": true }],
        "comma-dangle": [2, "never"],
        "multiline-ternary": "off",
        "no-trailing-spaces": "off"
        
    }
}